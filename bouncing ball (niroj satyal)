#include<stdio.h>
#include<graphics.h>
int main()
{
	int gd,gm,x,y,r,i,j=0,maxx,maxy,high;
	detectgraph(&gd,&gm);
	initgraph(&gd,&gm," ");

	//road
	setbkcolor(BLACK);
	setcolor(WHITE);
	line(0,415,620,415);
	
	//ball color & size
	x=50;
	y=365;
	r=50;
	setcolor(YELLOW);
	circle(x,y,r);
	setfillstyle(SOLID_FILL,YELLOW);
	floodfill(x,y,YELLOW);
	setcolor(BLACK);
    setfillstyle(SOLID_FILL, BLACK);
 
    // Use fill ellipse for creating eyes
    fillellipse(60, 350, 2, 6);
    fillellipse(40, 350, 2, 6);
 
     //Use ellipse for creating mouth
    ellipse(50, 365, 205, 335, 20, 9);
    ellipse(50, 365, 205, 335, 20, 10);
    ellipse(50, 365, 205, 335, 20, 11);
	high=320;//max height
	delay(500);

	while(high>=0)
	{
		//jump
		
		for(i=0;i<=high;i++)
		{
			cleardevice();
			setcolor(WHITE);
			line(0,415,620,415);
			line(620,0,620,415);
			if(i%6==0)
				j++;
			x=50+j;
			y=365-i;
			setcolor(YELLOW);
			circle(x,y,r);
			setfillstyle(SOLID_FILL,YELLOW);
			floodfill(x,y,YELLOW);
			setcolor(BLACK);
    setfillstyle(SOLID_FILL, BLACK);
 
    // Use fill ellipse for creating eyes
    fillellipse(60+j, 350-i, 2, 6);
    fillellipse(40+j, 350-i, 2, 6);
 
     //Use ellipse for creating mouth
    ellipse(50+j, 365-i, 205, 335, 20, 9);
    ellipse(50+j, 365-i, 205, 335, 20, 10);
    ellipse(50+j, 365-i, 205, 335, 20, 11);
			delay(10);
			
		}
		//fall
		for(i=high;i>=0;i--)
		{
			cleardevice();
			setcolor(WHITE);
			line(0,415,620,415);
			line(620,0,620,415);
			if(i%6==0)
				j++;
			x=50+j;
			y=365-i;
			setcolor(YELLOW);
			circle(x,y,r);
			setfillstyle(SOLID_FILL,YELLOW);
			floodfill(x,y,YELLOW);
			setcolor(BLACK);
    setfillstyle(SOLID_FILL, BLACK);
 
    // Use fill ellipse for creating eyes
    fillellipse(60+j, 350-i, 2, 6);
    fillellipse(40+j, 350-i, 2, 6);
 
     //Use ellipse for creating mouth
    ellipse(50+j, 375-i, 335, 205, 20, 9);
    ellipse(50+j, 375-i, 335, 205, 20, 10);
    ellipse(50+j, 375-i, 335 ,205, 20, 11);
			
			delay(10);
			cleardevice();
		}
		high=high-38;
	if (high<=20)
	{
		
	x=170;
	y=260;
	r=50;
	setcolor(YELLOW);
	circle(x,y,r);
	setfillstyle(SOLID_FILL,YELLOW);
	floodfill(x,y,YELLOW);
	setcolor(BLACK);
    setfillstyle(SOLID_FILL, BLACK);
 
    // Use fill ellipse for creating eyes
    fillellipse(180, 245, 2, 6);
    fillellipse(160, 245, 2, 6);
 
     //Use ellipse for creating mouth
    ellipse(170, 260, 205, 335, 20, 9);
    ellipse(170, 260, 205, 335, 20, 10);
    ellipse(170, 260, 205, 335, 20, 11);
   
    
	
	
			
			int font=8;
			int direction=0;
			int font_size=5;
			setcolor(RED);
			 settextstyle(font, direction,font_size);
			outtextxy(225, 245, "THANK YOU");
			
}

}
getch();
	closegraph();
	return 0;
}
